{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "project": ["server/tsconfig.json"]
  },
  "rules": {
    "indent": ["error", 2],
    "no-console": "error",
    "semi": ["error", "always"],
    "object-curly-spacing": ["error", "always"]
  }
}
